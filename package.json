  "keywords": [
    "vue",
    "tournament",
    "bracket",
    "elimination",
    "vue-tournament",
    "double-elimination",
    "single-elimination"
  ],
  "main": "./dist/bracket-vue-tool.umd.js",
  "module": "./dist/bracket-vue-tool.es.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krepysh-spec/vue-tournament-bracket.git"
  },
  "bugs": {
    "url": "https://github.com/krepysh-spec/vue-tournament-bracket/issues"
  },
  "private": false,
  "homepage": "https://krepysh-spec.github.io/vue-tournament-bracket",
  "exports": {
    ".": {
      "import": "./dist/bracket-vue-tool.es.js",
      "require": "./dist/bracket-vue-tool.umd.js"
    },
    "./style.css": "./dist/bracket-vue-tool.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006 --host 0.0.0.0 --no-open",
    "build-storybook": "storybook build",
    "docs:dev": "vitepress dev docs --port 6007 --host 0.0.0.0",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "tailwindcss": "^4.1.7",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@storybook/vue3-vite": "^9.0.15",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "autoprefixer": "^10.4.21",
    "storybook": "^9.0.15",
    "vite": "^6.3.5",
    "vitepress": "^1.6.3"
  },
  "dependencies": {
    "daisyui": "^5.0.43"
  }
