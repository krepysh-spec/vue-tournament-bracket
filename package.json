{
  "name": "bracket-vue-tool",
  "version": "1.0.23",
  "type": "module",
  "files": [
    "dist"
  ],
  "description": "A flexible Vue 3 component for creating interactive tournament brackets (single & double elimination) with zero runtime dependencies.",
  "keywords": [
    "vue",
    "tournament",
    "bracket",
    "elimination",
    "vue-tournament",
    "double-elimination",
    "single-elimination"
  ],
  "main": "./dist/bracket-vue-tool.umd.js",
  "module": "./dist/bracket-vue-tool.es.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krepysh-spec/vue-tournament-bracket.git"
  },
  "bugs": {
    "url": "https://github.com/krepysh-spec/vue-tournament-bracket/issues"
  },
  "private": false,
  "homepage": "https://krepysh-spec.github.io/vue-tournament-bracket",
  "exports": {
    ".": {
      "import": "./dist/bracket-vue-tool.es.js",
      "require": "./dist/bracket-vue-tool.umd.js"
    },
    "./style.css": "./dist/bracket-vue-tool.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006 --host 0.0.0.0 --no-open",
    "build-storybook": "storybook build",
    "docs:dev": "vitepress dev docs --port 6007 --host 0.0.0.0",
    "docs:build": "vitepress build docs --output-dir storybook-static --base /storybook",
    "docs:preview": "vitepress preview docs",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .js,.vue --fix",
    "format": "prettier src  --write"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.3",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@storybook/vue3-vite": "^9.0.15",
    "@tailwindcss/forms": "^0.5.10",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "storybook": "^9.0.15",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  }
}
